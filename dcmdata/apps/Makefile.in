#
#	Makefile for dcmdata
#


@SET_MAKE@

SHELL = /bin/sh
VPATH= @srcdir@:@top_srcdir@/include:@top_srcdir@/@configdir@/include
srcdir= @srcdir@
top_srcdir= @top_srcdir@
configdir=@top_srcdir@/@configdir@

include $(configdir)/@common_makefile@

ofstddir=$(top_srcdir)/../ofstd

LOCALINCLUDES=-I$(ofstddir)/include -I$(includedir)/ofstd

LIBDIRS = -L$(top_srcdir)/libsrc -L$(ofstddir)/libsrc -L$(libdir)
LOCALLIBS = -ldcmdata -lofstd

objs= dcmgpdir.o dcmftest.o dcmconv.o dcmdump.o dump2dcm.o 

progs= dcmgpdir dcmftest dcmconv dcmdump dump2dcm 

all: $(progs)

dcmgpdir: dcmgpdir.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(LIBDIRS) -o $@ $@.o $(LOCALLIBS) $(LIBS)  

dcmftest: dcmftest.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(LIBDIRS) -o $@ $@.o $(LOCALLIBS) $(LIBS)  

dcmconv: dcmconv.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(LIBDIRS) -o $@ $@.o $(LOCALLIBS) $(LIBS)  

dcmdump: dcmdump.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(LIBDIRS) -o $@ $@.o $(LOCALLIBS) $(LIBS)  

dump2dcm: dump2dcm.o 
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(LIBDIRS) -o $@ $@.o $(LOCALLIBS) $(LIBS)  

install: all
	$(configdir)/mkinstalldirs $(bindir)
	for prog in $(progs); do \
		$(INSTALL_PROGRAM) $$prog $(bindir); strip $(bindir)/$$prog ;\
	done

clean:
	rm -f $(objs) $(progs) $(TRASH)

distclean: 
	rm -f $(objs) $(progs) $(DISTTRASH)


dependencies:
	$(CXX) -MM $(defines) $(includes) $(CPPFLAGS) $(CXXFLAGS) *.cc  > $(DEP)

$(objs): config.h


include $(DEP)





