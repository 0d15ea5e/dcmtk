#
#	Makefile for dcmnet tests
#


@SET_MAKE@

SHELL = /bin/sh
VPATH= @srcdir@:@top_srcdir@/include:@top_srcdir@/@configdir@/include
srcdir= @srcdir@
top_srcdir= @top_srcdir@
configdir=@top_srcdir@/@configdir@

include $(configdir)/@common_makefile@


dcmdatadir=$(top_srcdir)/../dcmdata
ofstddir=$(top_srcdir)/../ofstd

LOCALINCLUDES=-I$(ofstddir)/include -I$(dcmdatadir)/include -I$(includedir)/ofstd -I$(includedir)/dcmdata

LIBDIRS = -L$(top_srcdir)/libsrc -L$(ofstddir)/libsrc -L$(dcmdatadir)/libsrc -L$(libdir)
LOCALLIBS = -ldcmnet -ldcmdata -lofstd

objs=assctest.o

progs=assctest


all: $(progs)


install: all
	$(configdir)/mkinstalldirs $(bindir)
	for prog in $(progs); do \
		$(INSTALL_PROGRAM) $$prog $(bindir); strip $(bindir)/$$prog ;\
	done
#	echo Nothing to for tests install

clean:
	rm -f $(objs) $(progs) $(TRASH)

distclean: clean
	rm -f $(DISTTRASH)


dependencies:
	touch $(DEP)
	$(CXX) -MM $(defines) $(includes) $(CPPFLAGS) $(CXXFLAGS) *.cc  > $(DEP)

$(objs): config.h

assctest: assctest.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(LIBDIRS) -o $@ $@.o $(LOCALLIBS) $(LIBS)  

include $(DEP)








