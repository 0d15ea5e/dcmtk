#
#	Makefile for dcmimage/libsrc
#

@SET_MAKE@

SHELL = /bin/sh
VPATH=@srcdir@:@top_srcdir@/include:@top_srcdir@/@configdir@/include
srcdir=@srcdir@
top_srcdir=@top_srcdir@
configdir=@top_srcdir@/@configdir@

# Special defines for the Library, define them in LOCALDEFS
#   REVERSE_OVERLAY_ORIGIN_ORDER
#	swap order of overlay origin coordinates
# LOCALDEFS = -DREVERSE_OVERLAY_ORIGIN_ORDER

LOCALINCLUDES = -I@top_srcdir@/../ofstd/include -I@top_srcdir@/../dcmdata/include -I@top_srcdir@/../dcmimgle/include

include $(configdir)/@common_makefile@

objs = dicoimg.o dicopx.o dicoopx.o diregist.o \
        diargimg.o dicmyimg.o dihsvimg.o dipalimg.o dirgbimg.o \
        diybrimg.o diyf2img.o diyp2img.o dipitiff.o

all: libdcmimage.$(LIBEXT)

install: install-lib

install-lib:	$(libdir)/libdcmimage.$(LIBEXT)

$(libdir)/libdcmimage.$(LIBEXT):	libdcmimage.$(LIBEXT)
	$(configdir)/mkinstalldirs $(libdir)
	$(INSTALL_DATA) libdcmimage.$(LIBEXT) $(libdir)/libdcmimage.$(LIBEXT)

clean:
	rm -f $(objs) 
	rm -f libdcmimage.$(LIBEXT)
	rm -f $(TRASH)

distclean: clean
	rm -f $(DISTTRASH) 

libdcmimage.$(LIBEXT): $(objs)
	$(AR) $(ARFLAGS) $@ $(objs)
	$(RANLIB) $@

dependencies:
	$(CXX) -MM $(defines) $(includes) $(CPPFLAGS) $(CXXFLAGS) *.cc  > $(DEP)

$(objs): config.h

include $(DEP)

