#
#	Makefile for dcmtls/libsrc
#


@SET_MAKE@

SHELL = /bin/sh
VPATH = @srcdir@:@top_srcdir@/include:@top_srcdir@/@configdir@/include
srcdir = @srcdir@
top_srcdir = @top_srcdir@
configdir = @top_srcdir@/@configdir@

include $(configdir)/@common_makefile@

dcmdatadir = $(top_srcdir)/../dcmdata
ofstddir = $(top_srcdir)/../ofstd
dcmimgledir = $(top_srcdir)/../dcmimgle
imagectndir = $(top_srcdir)/../imagectn
dcmnetdir = $(top_srcdir)/../dcmnet

LOCALINCLUDES = -I$(ofstddir)/include -I$(dcmdatadir)/include \
	-I$(dcmimgledir)/include -I$(imagectndir)/include -I$(dcmnetdir)/include \
	-I$(includedir)/ofstd -I$(includedir)/dcmdata -I$(includedir)/dcmimgle \
	-I$(includedir)/imagectn -I$(includedir)/dcmnet
LOCALDEFS =

objs = tlstrans.o tlslayer.o
library = libdcmtls.$(LIBEXT)


all: $(library)

install: all
	$(configdir)/mkinstalldirs $(libdir)
	$(INSTALL_DATA) $(library) $(libdir)/$(library)

$(library): $(objs)
	$(AR) $(ARFLAGS) $@ $(objs)
	$(RANLIB) $@

clean:
	rm -f $(objs) $(library) $(TRASH)

distclean: clean
	rm -f $(objs) $(library) $(DISTTRASH)



dependencies:
	$(CXX) -MM $(defines) $(includes) $(CPPFLAGS) $(CXXFLAGS) *.cc  > $(DEP)

include $(DEP)
