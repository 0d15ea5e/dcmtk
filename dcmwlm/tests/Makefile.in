#
#	Makefile for dcmwlm/tests
#


@SET_MAKE@

SHELL = /bin/sh
VPATH= @srcdir@:@top_srcdir@/include:@top_srcdir@/@configdir@/include
srcdir= @srcdir@
top_srcdir= @top_srcdir@
configdir=@top_srcdir@/@configdir@

include $(configdir)/@common_makefile@

ofstddir=$(top_srcdir)/../ofstd
dcmdatadir=$(top_srcdir)/../dcmdata
dcmnetdir=$(top_srcdir)/../dcmnet

LOCALINCLUDES= -I$(dcmnetdir)/include -I$(dcmdatadir)/include \
-I$(ofstddir)/include -I$(includedir)/dcmdata -I$(includedir)/dcmnet \
-I$(includedir)/ofstd
LIBDIRS = -L$(top_srcdir)/libsrc -L$(dcmnetdir)/libsrc \
-L$(dcmdatadir)/libsrc -L$(ofstddir)/libsrc -L$(libdir)
LOCALLIBS = -ldcmwlm -ldcmnet -ldcmdata -lofstd $(ZLIBLIBS)

objs= wltest.o

progs= wltest


all: $(progs)

wltest: $(objs)
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(LIBDIRS) -o $@ $(objs) $(LOCALLIBS) $(MATHLIBS) $(LIBS)

install: all
	$(configdir)/mkinstalldirs $(bindir)
	for prog in $(progs); do \
		$(INSTALL_PROGRAM) $$prog$(BINEXT) $(bindir); strip $(bindir)/$$prog$(BINEXT) ;\
	done

clean:
	rm -f $(objs) $(progs) $(TRASH)

distclean: clean
	rm -f $(DISTTRASH)


dependencies:
	$(CXX) -MM $(defines) $(includes) $(CPPFLAGS) $(CXXFLAGS) *.cc  > $(DEP)

include $(DEP)
