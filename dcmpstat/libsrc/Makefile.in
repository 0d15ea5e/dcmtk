#
#	Makefile for dcmpstat
#


@SET_MAKE@

SHELL = /bin/sh
VPATH=@srcdir@:@top_srcdir@/include:@top_srcdir@/@configdir@/include
srcdir=@srcdir@
top_srcdir=@top_srcdir@
configdir=@top_srcdir@/@configdir@

dcmdatadir=$(top_srcdir)/../dcmdata
ofstddir=$(top_srcdir)/../ofstd
dcmimgledir=$(top_srcdir)/../dcmimgle

LOCALINCLUDES=-I$(ofstddir)/include -I$(dcmdatadir)/include -I$(dcmimgledir)/include -I$(includedir)/ofstd -I$(includedir)/dcmdata -I$(includedir)/dcmimgle


LOCALDEFS= 

include $(configdir)/@common_makefile@

objs =  dvpsal.o   dvpsgal.o  dvpsgr.o   dvpsovl.o  dvpsrs.o   dvpstx.o \
        dvpsall.o  dvpsgl.o   dvpsgrl.o  dvpsri.o   dvpsrsl.o  dvpstxl.o \
        dvpsga.o   dvpsgll.o  dvpsov.o   dvpsril.o  dvpstat.o  dviface.o

all: libdcmpstat.$(LIBEXT)


install: all
	$(configdir)/mkinstalldirs $(libdir)
	$(INSTALL_DATA) libdcmpstat.$(LIBEXT) $(libdir)/libdcmpstat.$(LIBEXT)


clean:
	rm -f $(objs) 
	rm -f libdcmpstat.$(LIBEXT) 
	rm -f $(TRASH)

distclean: clean
	rm -f $(DISTTRASH) 


libdcmpstat.$(LIBEXT): $(objs)
	$(AR) $(ARFLAGS) $@ $(objs)
	$(RANLIB) $@


# Dependencies

dependencies:
	$(CXX) -MM $(defines) $(includes) $(CPPFLAGS) $(CXXFLAGS) *.cc  > $(DEP)

$(objs): config.h


include $(DEP)





