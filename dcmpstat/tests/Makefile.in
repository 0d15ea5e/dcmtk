#
#	Makefile for dcmpstat/tests
#


@SET_MAKE@

SHELL = /bin/sh
VPATH = @srcdir@:@top_srcdir@/include:@top_srcdir@/@configdir@/include
srcdir = @srcdir@
top_srcdir = @top_srcdir@
configdir = @top_srcdir@/@configdir@

include $(configdir)/@common_makefile@

ofstddir = $(top_srcdir)/../ofstd
dcmdatadir = $(top_srcdir)/../dcmdata
dcmnetdir = $(top_srcdir)/../dcmnet
imagectndir = $(top_srcdir)/../imagectn
dcmimgledir = $(top_srcdir)/../dcmimgle

LOCALINCLUDES = -I$(dcmnetdir)/include -I$(dcmdatadir)/include -I$(ofstddir)/include \
	-I$(ofstddir)/include -I$(imagectndir)/include -I$(dcmimgledir)/include
LIBDIRS = -L$(top_srcdir)/libsrc -L$(dcmnetdir)/libsrc -L$(ofstddir)/libsrc \
	-L$(dcmdatadir)/libsrc -L$(dcmimgledir)/libsrc -L$(imagectndir)/libsrc
LOCALLIBS = -ldcmpstat -ldcmimgle -limagedb -ldcmnet -ldcmdata -lofstd

objs = msgserv.o
progs = msgserv
support = philips.lut


all: $(progs)

msgserv: msgserv.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(LIBDIRS) -o $@ msgserv.o $(LOCALLIBS) $(MATHLIBS) $(LIBS)


install: all install-support

install-support:
	$(configdir)/mkinstalldirs $(datadir)
	for file in $(support); do \
		$(INSTALL_DATA) $$file $(datadir) ;\
	done

clean:
	rm -f $(objs) $(progs) $(TRASH)

distclean:
	rm -f $(objs) $(progs) $(DISTTRASH)


dependencies:
	$(CXX) -MM $(defines) $(includes) $(CPPFLAGS) $(CXXFLAGS) *.cc  > $(DEP)

include $(DEP)
