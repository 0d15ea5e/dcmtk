#
#	Makefile for dcmnet tests
#


@SET_MAKE@

SHELL = /bin/sh
VPATH= @srcdir@:@top_srcdir@/include:@top_srcdir@/@configdir@/include
srcdir= @srcdir@
top_srcdir= @top_srcdir@
configdir=@top_srcdir@/@configdir@

include $(configdir)/@common_makefile@

ofstddir=$(top_srcdir)/../ofstd
dcmdatadir=$(top_srcdir)/../dcmdata
dcmnetdir=$(top_srcdir)/../dcmnet

LOCALINCLUDES=-I$(dcmnetdir)/include -I$(dcmdatadir)/include \
	-I$(ofstddir)/include -I$(includedir)/ofstd \
	-I$(includedir)/dcmnet -I$(includedir)/dcmdata \
	-I../../imagectn/include


LIBDIRS = -L$(top_srcdir)/libsrc -L$(dcmnetdir)/libsrc -L$(ofstddir)/libsrc \
	-L$(dcmdatadir)/libsrc -L../../dcmimgle/libsrc -L$(libdir)\
	-L../../dcmpstat/libsrc -L../../imagectn/libsrc 

LOCALLIBS = -ldcmpstat -ldcmimgle -limagedb  -ldcmnet -ldcmdata -lofstd 


objs = show.o didb.o

progs= show didb


all: $(progs)

  
show: show.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(LIBDIRS) -o $@ show.o $(LOCALLIBS) $(LIBS)  
didb: didb.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(LIBDIRS) -o $@ didb.o $(LOCALLIBS) $(LIBS)  

install: all
	$(configdir)/mkinstalldirs $(bindir)
	for prog in $(progs); do \
		$(INSTALL_PROGRAM) $$prog $(bindir); strip $(bindir)/$$prog ;\
	done

clean:
	rm -f $(objs) $(progs) $(TRASH)

distclean: clean
	rm -f $(DISTTRASH)


dependencies:
	$(CXX) -MM $(defines) $(includes) $(CPPFLAGS) $(CXXFLAGS) *.cc  > $(DEP)

$(objs): config.h


include $(DEP)





