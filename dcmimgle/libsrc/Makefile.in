#
#	Makefile for dcmimgle/libsrc
#

@SET_MAKE@

SHELL = /bin/sh
VPATH=@srcdir@:@top_srcdir@/include:@top_srcdir@/@configdir@/include
srcdir=@srcdir@
top_srcdir=@top_srcdir@
configdir=@top_srcdir@/@configdir@

# Special defines for the Library, define them in LOCALDEFS
#   REVERSE_OVERLAY_ORIGIN_ORDER
#	swap order of overlay origin coordinates
# LOCALDEFS = -DREVERSE_OVERLAY_ORIGIN_ORDER

LOCALINCLUDES = -I@top_srcdir@/../ofstd/include -I@top_srcdir@/../dcmdata/include

include $(configdir)/@common_makefile@

objs = dcmimage.o didocu.o diimage.o diinpx.o diovlay.o diovpln.o diovlimg.o \
	dimoimg.o dimo1img.o dimo2img.o dimomod.o dimopx.o dimoopx.o \
    didispfn.o didislut.o digsdfn.o digsdlut.o diciefn.o dicielut.o \
    diutils.o diluptab.o dibaslut.o

all: libdcmimgle.$(LIBEXT)

install: install-lib

install-lib:	$(libdir)/libdcmimgle.$(LIBEXT)

$(libdir)/libdcmimgle.$(LIBEXT):	libdcmimgle.$(LIBEXT)
	$(configdir)/mkinstalldirs $(libdir)
	$(INSTALL_DATA) libdcmimgle.$(LIBEXT) $(libdir)/libdcmimgle.$(LIBEXT)

clean:
	rm -f $(objs) 
	rm -f libdcmimgle.$(LIBEXT) 
	rm -f $(TRASH)

distclean: clean
	rm -f $(DISTTRASH) 

libdcmimgle.$(LIBEXT): $(objs)
	$(AR) $(ARFLAGS) $@ $(objs)
	$(RANLIB) $@

dependencies:
	$(CXX) -MM $(defines) $(includes) $(CPPFLAGS) $(CXXFLAGS) *.cc  > $(DEP)

$(objs): config.h

include $(DEP)
